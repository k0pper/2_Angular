{
    "version": "2.3.0",
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "listFiles": true,
        "diagnostics": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "mapRoot": "",
        "alwaysStrict": true,
        "strict": true,
        "lib": ["es2015", "es2016", "es2017", "dom"]
    },
    "exclude": [
        "node_modules",
        "dist",
        "tasks",
        "config"
    ]
}